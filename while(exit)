using System;

class Program
{

    static void Main(string[] args)
    {    
        string phrase = "start";
        string exit = "exit";

        while (phrase != exit)
        {
            Console.WriteLine("Введите команду! Для выхода используйте - " + exit);
            phrase = Console.ReadLine();
            Console.WriteLine("Ваша команда: " + phrase);

            if (phrase == exit)
                Console.WriteLine("Программа завершена!");  
        }
    }
}
